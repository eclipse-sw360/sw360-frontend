{
  "name": "sw360-frontend",
  "version": "0.9.0-beta",
  "private": true,
  "scripts": {
    "preinstall": "pnpx only-allow pnpm",
    "dev": "NODE_OPTIONS='--inspect' next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "biome lint",
    "format": "biome format",
    "lint::fix": "biome lint --fix",
    "format::fix": "biome format --fix",
    "check": "biome check",
    "check::fix": "biome check --fix",
    "test": "cypress open",
    "prepare": "husky"
  },
  "dependencies": {
    "@tanstack/react-table": "^8.21.3",
    "classnames": "^2.5.1",
    "country-list": "^2.4.1",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.1",
    "flag-icons": "^7.3.2",
    "gridjs": "^6.2.0",
    "html-react-parser": "^5.2.7",
    "http-status-codes": "^2.3.0",
    "jwt-decode": "^4.0.0",
    "next": "15.5.4",
    "next-auth": "^4.24.11",
    "next-intl": "^4.3.9",
    "next-themes": "^0.4.6",
    "preact": "^10.27.2",
    "react": "19.1.0",
    "react-bootstrap": "^2.10.10",
    "react-cookie": "^8.0.1",
    "react-dom": "19.1.0",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "19.8.0",
    "@types/country-list": "^2.1.4",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^24.4.0",
    "@types/react": "19.1.3",
    "@types/react-dom": "19.1.6",
    "bootstrap": "^5.3.8",
    "classnames": "^2.3.2",
    "commitlint": "^19.8.0",
    "cypress": "^15.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "react-icons": "^5.5.0",
    "ts-node": "^10.9.2",
    "tsc-files": "^1.1.4",
    "typescript": "^5.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "pnpx --no -- commitlint --edit $1"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "biome check --reporter=summary"
    ],
    "**/*.{css,scss,md,html,json}": [
      "biome format"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "subject-case": [
        2,
        "always",
        [
          "sentence-case",
          "upper-case"
        ]
      ]
    }
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.0.10",
      "@types/react-dom": "19.1.6",
      "@eslint/plugin-kit": "^0.3.3"
    },
    "ignoredBuiltDependencies": [
      "cypress",
      "sharp"
    ]
  },
  "prettier": {
    "semi": false,
    "tabWidth": 4,
    "printWidth": 120,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "endOfLine": "auto",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "singleAttributePerLine": true,
    "plugins": [
      "prettier-plugin-organize-imports"
    ],
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "babel"
        }
      },
      {
        "files": "*.json",
        "options": {
          "tabWidth": 2,
          "semi": true
        }
      },
      {
        "files": "*.yml",
        "options": {
          "tabWidth": 2,
          "semi": true
        }
      }
    ],
    "organizeImportsSkipDestructiveCodeActions": true
  }
}
